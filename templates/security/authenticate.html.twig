{% extends "security/_base.html.twig" %}

{% block title %}{{ "authenticate.title"|trans }}{% endblock %}
{% block description %}{{ "authenticate.description"|trans }}{% endblock %}

{% trans_default_domain "security" %}

{% block form_content %}
    <p class="alert alert-info">{{ "authenticate.help"|trans }}</p>
    <div class="form-wrapper">
        {{ form(form) }}
    </div>

    <p>
        {{ "authenticate.no_account_yet"|trans }}
        <a href="{{ path("create") }}">{{ "create.title"|trans }}</a>
    </p>
{% endblock %}
