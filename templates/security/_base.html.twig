{% extends '_base.html.twig' %}

{% block body %}
    <section class="center-wrapper">
        <div class="center-content tile {% if wide is defined %}wide{% endif %}">
            <h1>{{ block("title") }}</h1>

            <p class="text-secondary">
                {{ block("description") }}
            </p>

            {% block form_content %}
                <div class="form-wrapper">
                    {{ form(form) }}
                </div>
            {% endblock %}
            {% block secondary_content %}
            {% endblock %}
        </div>
    </section>
{% endblock %}
