{% use 'bootstrap_4_layout.html.twig' %}

{% block checkbox_radio_label -%}
    {%- if label is not same as(false) and label is empty -%}
        {%- if label_format is empty -%}
            {%- set label = name|camelCaseToUnderscore -%}
        {%- endif -%}
    {%- endif -%}
    {{- parent() -}}
{%- endblock checkbox_radio_label %}

{%- block button_widget -%}
    {%- if label is not same as(false) and label is empty -%}
        {%- if label_format is empty -%}
            {% set label = name|camelCaseToUnderscore %}
        {%- endif -%}
    {%- endif -%}
    {{- parent() -}}
{%- endblock button_widget -%}

{%- block form_label -%}
    {% if label is not same as(false) -%}
        {% if label is empty -%}
            {%- if label_format is empty -%}
                {% set label = name|camelCaseToUnderscore %}
            {%- endif -%}

            {%- if translation_domain is not same as(false) -%}
                {%- if label_html is same as(false) -%}
                    {% set label = label|trans(label_translation_parameters, translation_domain) %}
                {%- else -%}
                    {% set label = label|trans(label_translation_parameters, translation_domain)|raw %}
                {%- endif -%}
                {% set translation_domain = false %}
            {%- endif -%}

            {% if required %}
                {% set label = label ~ '*' %}
            {% endif %}
        {%- endif -%}
    {%- endif -%}
    {{- parent() -}}
{%- endblock form_label -%}

